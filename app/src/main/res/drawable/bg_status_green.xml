<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#E6F7EC" /> <!-- light green background -->

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Border (optional, for subtle green stroke) -->
    <stroke
        android:width="1dp"
        android:color="#2ECC71" /> <!-- green stroke -->

    <!-- Padding inside the chip -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp" />

</shape>
