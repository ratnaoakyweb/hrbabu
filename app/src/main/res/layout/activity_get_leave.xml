<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorPrimaryDark">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Back"
            app:tint="@color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Leaves"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/white" />
    </LinearLayout>

    <!-- Tabs -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabSelectedTextColor="@color/colorPrimary"
        app:tabTextColor="@color/gray"
        app:tabMode="fixed"
        app:tabGravity="fill"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Content Area -->
    <FrameLayout
        android:id="@+id/tabContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/white"
        android:padding="1dp"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        app:layout_constraintBottom_toTopOf="@id/btnApplyLeave">

        <!-- RecyclerView (for Leave History) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
        <!-- Empty view shown when no leaves taken -->
        <LinearLayout
            android:id="@+id/layoutEmptyLeave"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp"
            android:visibility="visible">

            <!-- Illustration -->
            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/empty_no_leave"
                android:contentDescription="No Leave"
                android:layout_gravity="center" />

            <!-- Friendly Message -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You haven't taken any leave yet!"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp" />

            <!-- Optional CTA -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feeling tired? Go ahead and request one."
                android:textColor="#999999"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />

            <!-- Optional Action Button -->
            <Button

                android:id="@+id/btnRequestLeave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Request Leave"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/colorPrimary"
                android:layout_marginTop="24dp"
                android:visibility="gone" />
        </LinearLayout>
        <!-- Leave Balance Layout -->
        <FrameLayout
            android:id="@+id/layoutLeaveBalance"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:background="@android:color/white">

            <!-- RecyclerView for leave data -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewLeaveBalance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible" />


        </FrameLayout>

    </FrameLayout>

    <!-- Bottom Button -->
    <Button
        android:id="@+id/btnApplyLeave"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Apply Leave"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/colorPrimary"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
