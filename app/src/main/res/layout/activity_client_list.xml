<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/colorPrimaryDark"
    tools:context=".activity.ActivityClientList">

    <!-- Header Bar -->
    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/llTop"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="?attr/colorPrimary"
        android:paddingHorizontal="12dp"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Back"
            app:tint="@android:color/white" />

        <TextView
            android:id="@+id/tvHeaderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clients"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Content Section -->
    <LinearLayout
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/llTop"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/btnAddNewClient"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Search Clients"
            android:imeOptions="actionSearch"
            android:paddingHorizontal="10dp"
            android:background="@drawable/bg_search"
            android:layout_marginBottom="8dp" />

        <!-- Empty View -->
        <LinearLayout
            android:id="@+id/emptyView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:padding="10dp">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:src="@drawable/empty_add_client"
                android:contentDescription="No Clients"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nothing here yet. Letâ€™s add your first client!"
                android:textColor="@color/black_shade"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnEmptyAddClient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add First Client"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/colorPrimary"
                android:layout_marginTop="20dp" />
        </LinearLayout>

        <!-- RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewClients"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Add Client Button -->
    <Button
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20sp"
        android:id="@+id/btnAddNewClient"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add New Client"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
